{
    "rules": {
        "indent": [
            "error", 2
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "class-property/class-property-semicolon": ["error", "never"],
        "react/jsx-indent-props": [1, 2],
        "react/jsx-indent": [1, 2],
        "strict": 0,
        "react/jsx-uses-vars": 2,
        "no-undef": "error"
    },
    "env": {
        "browser": true,
        "es6": true,
        "amd": true
    },
    "extends": "eslint:recommended",
    "parserOptions": { "ecmaVersion": 6 },
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "class-property",
        "import",
        "promise"
    ]
}