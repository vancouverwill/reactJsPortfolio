{
    "rules": {
        "indent": [
            "error", 2
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "class-property/class-property-semicolon": ["error", "never"],
        "react/jsx-indent-props": ["warn", 2],
        "react/jsx-indent": ["warn", 2],
        "strict": "error",
        "react/jsx-uses-vars": 2,
        "no-undef": "error",
        // "no-magic-numbers": "warn",
        "class-methods-use-this": "error",
        "no-else-return": "error",
        "no-eq-null": "error",
        "no-extra-bind": "error",
        // ES6
        "no-var": "error",
        "no-this-before-super": "error",
        "constructor-super": "error",
        "no-duplicate-imports": "error",
        "no-const-assign": "error",
        "prefer-const": "error",
        "sort-imports": "error",
        "arrow-spacing": "warn",
        "prefer-arrow-callback": "warn",
        "babel/no-invalid-this": 1
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "apiUrl": true
    },
    "parserOptions": { 
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true
        }
     },
    "parser": "babel-eslint",
    "plugins": [
        "babel",
        "react",
        "class-property",
        "import",
        "promise"
    ]
}