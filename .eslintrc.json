{
    "rules": {
        "indent": [
            "error", 2
        ],
        "quotes": [
            2,
            "double"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "react/jsx-indent-props": [1, 2],
        "react/jsx-indent": [1, 2],
        "class-property/rule-name": 2,
        "strict": 0,
        "react/jsx-uses-vars": 2
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    // "ecmaFeatures": {
    //     "jsx": true,
    //     "experimentalObjectRestSpread": true
    // },
    "parserOptions": { "ecmaVersion": 6 },
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "class-property",
        "promise"
    ]
}